<hibernate-configuration>
    <session-factory>
        <!--        Настройки JDBC -->
        <property name="connection.driver_class"></property>
        <property name="connection.url"></property>
        <property name="connection.username"></property>
        <property name="connection.password"></property>
        <!--  Можно задать размер пула соединений, по умолчанию 20?  -->
        <property name="connection.pool_size">10</property>
        <!-- Показывает в консоли SQL запросы -->
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>
        <!-- POJO классы для маппинга-->
        <mapping class="ru.library.domain.Author"/>
        <mapping class="ru.library.domain.Book"/>
        <mapping class="ru.library.domain.Order"/>
        <mapping class="ru.library.domain.User"/>
    </session-factory>
</hibernate-configuration>